<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light" />

   <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
     <style name="Widget" />

    <style name="title_name">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="return_back_icon">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="return_back_text">
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">#36891b</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="return_title_name">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#36891b</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Transparent" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="Transparents">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="exercise_detai_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#c9c9c9</item>
    </style>

    <style name="exercise_detai_num">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#c9c9c9</item>
    </style>

    <style name="remind_set_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#2b2b2b</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <style name="sleep_detail_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/sleep_detail_title</item>
    </style>

    <style name="sleep_detail_num">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/sleep_detail_num</item>
    </style>

    <style name="sleep_detail_unit">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sleep_detail_num</item>
    </style>

    <style name="manage_device_fresh">
        <item name="android:indeterminateDrawable">@drawable/manage_device_fresh</item>
        <item name="android:minWidth">65dp</item>
        <item name="android:maxWidth">65dp</item>
        <item name="android:minHeight">65dp</item>
        <item name="android:maxHeight">65dp</item>
    </style>

    <style name="main_bar_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Widget.ListTitle">
        <item name="android:background">@color/headerBackgroundColor</item>
        <item name="android:textColor">@color/headerTextColor</item>
        <item name="android:gravity">center</item>
    </style>
     <style name="Widget.Connect" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>
    
    <style name="dialog_style_light" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
    </style>
    <style name="dialog_style_light_2" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:typeface">normal</item>
        
    </style>

    <style name="butotn_display">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">0dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="layout_sleep_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/white</item>
    </style>
    
    <style name="check_sleep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/taget_btn</item>
    </style>
    
    <style name="text_sleep_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_sleep_item_title</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>