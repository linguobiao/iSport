<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_value_mid_user_info_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/image_device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:contentDescription="@null"
        android:src="@drawable/image_ride_history_item" />

    <TextView
        android:id="@+id/manage_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textColor="@color/ride_black"
        android:textSize="16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.0" />

    <ImageView
        android:id="@+id/bind_device_item_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="50dp"
        android:contentDescription="@drawable/ic_launcher"
        android:src="@drawable/device_is_bind_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        android:drawableRight="@drawable/image_arrow_right"
        android:textColor="@color/ride_black"
        android:textSize="20dp" />

</LinearLayout>